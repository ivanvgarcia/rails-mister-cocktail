<section class="hero is-small is-primary is-bold">
  <div class="hero-body">
    <div class="container ">
      <h1 class="title has-text-dark">
        Add a new <span class="title-text">dose</span>
      </h1>
    </div>
  </div>
</section>

<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= simple_form_for [@cocktail, @dose], html: { class: '' } do |f| %>
        <div class="">
          <div class="">
            <%= f.input :description, label_html: { class: "label" },
            input_html: { class: "label" } %>
          </div>

          <div class="">
            <%= f.association :ingredient, collection: @ingredients, prompt:
            "Choose an ingredient...", label_html: { class: "label" } %>
          </div>

          <div class="buttons">
            <%= link_to 'Back to Cocktail', cocktail_path(@cocktail), class:
            "button is-dark is-outlined" %> <%= f.submit "Add Ingredient",
            class: "button is-primary has-text-dark" %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
