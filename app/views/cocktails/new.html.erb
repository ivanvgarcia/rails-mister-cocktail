<section class="hero is-small is-primary is-bold">
  <div class="hero-body">
    <div class="container ">
      <h1 class="title has-text-dark">
        Add a new <span class="title-text">cocktail</span>
      </h1>
    </div>
  </div>
</section>

<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-half">
        <%= simple_form_for @cocktail, html: { class: 'form' } do |f| %>
        <div class="field">
          <%= f.input :name, label_html: { class: "label" }, input_html: {
          class: "" } %> <%= f.input :photo, label_html: { class: "label" },
          input_html: { class: "" } %> <%= f.input :photo_cache, as: :hidden %>
          <%= f.submit "Add", class: "button is-dark is-fullwidth" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
