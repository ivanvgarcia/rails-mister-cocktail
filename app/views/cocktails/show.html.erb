<section class="hero is-small is-primary is-bold">
  <div class="hero-body">
    <div class="container hero-flex">
      <h1 class="title has-text-dark">
        Make a <span class="title-text"><%= @cocktail.name %></span>
      </h1>
      <div class="hero-actions align-center">
        <div class="hero-likes align-center">
          <p class="has-text-dark is-size-5"><%= @cocktail.likes.length %> people love <%= @cocktail.name %></p>  
          <%= simple_form_for [@cocktail, @like] do |f| %>  
             <%= button_tag(type: 'submit', class: "button") do %>
                <%= fa_icon "heart" %>
              <% end %>
          <% end %>
          
        </div>
        <h4>
          <%= link_to cocktail_path(@cocktail), method: "delete" do %> <%=
          fa_icon "times" %> <% end %>
        </h4>
      </div>
    </div>
  </div>
</section>

<section class="cocktail-show">
  <div class="columns is-multiline">
    <div class="column is-half">
      <%= cl_image_tag @cocktail.photo %>
    </div>
    <div class="column is-half cocktail-show__dose center-content">
      <h4 class="title is-3">Ingredients</h4>
      <div class="cocktail-show__list">
        <% @cocktail.doses.each do |dose| %>
        <div class="cocktail-show__items">
          <div class="cocktail-show__description">
            <p><%= dose.description %></p>
          </div>
          <div class="cocktail-show__name">
            <p><%= dose.ingredient.name %></p>
          </div>
          <div class="cocktail-show__delete">
            <%= link_to dose_path(dose), method: "delete" do %> <%= fa_icon
            "times" %> <% end %>
          </div>
        </div>

        <% end %>
      </div>

      <%= link_to 'Add a Dose', new_cocktail_dose_path(@cocktail), class:
      "button is-info is-outlined" %>
    </div>
  </div>
</section>
