<section class="hero is-small is-primary is-bold">
  <div class="hero-body">
    <div class="container ">
      <h1 class="title has-text-dark">
        Make a <span class="title-text"><%= @cocktail.name %></span>
      </h1>
    </div>
  </div>
</section>

<section class="cocktail-show">
  <div class="columns is-multiline">
    <div class="column is-half">
      <%= cl_image_tag @cocktail.photo %>
    </div>
    <div class="column is-half">
      <%= link_to 'Add a Dose', new_cocktail_dose_path(@cocktail) %>
    </div>
  </div>
</section>

<% @cocktail.doses.each do |dose| %>
  <%= dose.description %>
  <%= dose.ingredient.name %>
  <%= link_to 'delete', dose_path(dose), method: 'delete' %>
<% end %>