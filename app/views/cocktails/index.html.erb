<section class="hero is-small is-primary is-bold">
  <div class="hero-body">
    <div class="container ">
      <h1 class="title has-text-dark">
        Cocktails
      </h1>
      <h2 class="subtitle has-text-dark">
        Find the best cocktails in the world
      </h2>
    </div>
  </div>
</section>
<% if notice %>
<div class="notification is-success" role="alert">
  <button type="button" class="delete" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
  <%= notice %>
</div>
<% end %> <% if alert %>
<div class="notification is-danger" role="alert">
  <button type="button" class="delete" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
  <%= alert %>
</div>
<% end %>

<section class="section">
  <div class="container">
    <div class="columns is-centered is-multiline">
      <% @cocktails.each do |cocktail| %>
      <div class="column is-4">
        <div class="card">
          <%= cl_image_tag cocktail.photo, :transformation => { :dpr => "auto",
          :responsive => true, :width => "auto", :crop => "scale"} %>

          <div class="card-body">
            <div class="card-title">
              <%= cocktail.name.upcase %>
            </div>
            <div class="card-button">
              <%= link_to 'Drink Up!', cocktail_path(cocktail), class: "button
              is-primary has-text-dark" %>
            </div>
          </div>

          <%= image_tag 'cocktail.png', class: "card-icon" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</section>
